<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman" %></title>
    <%= stylesheet_link_tag '../vendor/materialize/dist/css/materialize.min.css'%>
    <%= javascript_include_tag "../vendor/jquery/dist/jquery.min.js" %>
    <%= javascript_include_tag "../vendor/materialize/dist/js/materialize.min.js" %>
    <% content_for :vendor do %>
  <%= stylesheet_link_tag 'index'%>
<% end %>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
  </head>

  <body class="<%= page_classes %>">
  <%= partial '/layouts/partials/navbar'%>
      <div class="container">
          <%= yield %>
      </div>

  </body>
</html>
